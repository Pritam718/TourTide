<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>TourTide</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Free HTML Templates" name="keywords" />
    <meta content="Free HTML Templates" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link
      href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <style>
      .carousel-inner img {
        max-height: 650px;
        object-fit: contain;
      }
    </style>
    <link href="/css/style.css" rel="stylesheet" />
  </head>

  <body>
    <%- include("./layouts/flash") %>
    <!-- Topbar -->
    <%-include("./layouts/topbar") %>
    <!-- Navbar -->
    <%-include("./layouts/navbar") %>

    <!-- Header Start -->
    <div class="container-fluid page-header">
      <div class="container">
        <div
          class="d-flex flex-column align-items-center justify-content-center"
          style="min-height: 400px"
        >
          <h3 class="display-4 text-white text-uppercase">Explore More</h3>
          <div class="d-inline-flex text-white">
            <p class="m-0 text-uppercase">
              <a class="text-white" href="">Tour Packages</a>
            </p>
            <i class="fa fa-angle-double-right pt-1 px-3"></i>
            <p class="m-0 text-uppercase">Explore</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Header End -->
    <!-- carousal-->
    <!-- Page Header -->

    <!-- Image Carousel -->
    <div
      class="d-flex justify-content-center align-items-center"
      style="min-height: 80vh"
    >
      <div class="container" style="max-width: 1100px">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% tour.image.forEach((imageFilename, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img
                class="d-block w-100 rounded"
                src="/<%= imageFilename %>"
                alt="Image"
              />
            </div>
            <% }); %>
          </div>

          <!-- Controls -->
          <a
            class="carousel-control-prev"
            href="#header-carousel"
            data-slide="prev"
          >
            <div class="btn btn-dark" style="width: 45px; height: 45px">
              <span class="carousel-control-prev-icon mb-n2"></span>
            </div>
          </a>
          <a
            class="carousel-control-next"
            href="#header-carousel"
            data-slide="next"
          >
            <div class="btn btn-dark" style="width: 45px; height: 45px">
              <span class="carousel-control-next-icon mb-n2"></span>
            </div>
          </a>
        </div>
      </div>
    </div>
    <!-- Tour Summary Card -->
    <div class="container my-5">
      <div
        class="card p-4 d-flex flex-md-row flex-column justify-content-between align-items-center shadow-sm"
      >
        <h3 class="text-primary font-weight-bold mb-md-0 mb-3">
          <%= tour.place %>
        </h3>
        <a href="#" class="btn btn-success font-weight-bold px-4 py-2"
          >Plan your Trip</a
        >
      </div>
    </div>

    <!-- Tour Information Section -->
    <div class="container mb-5">
      <div class="row">
        <div class="col-md-6 mb-4">
          <div class="card p-4 h-100 shadow-sm">
            <h2 class="text-primary font-weight-bold mb-3">
              Discover <%= tour.place %>
            </h2>
            <p class="mb-2">
              <i class="fas fa-map-marker-alt text-danger"></i> <%=
              tour.address.city %>, <%= tour.address.state %>, <%=
              tour.address.district %>, <%= tour.address.country %>
            </p>
            <p class="text-muted mb-3"><%= tour.description %></p>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="card p-4 h-100 shadow-sm">
            <h4 class="text-success text-center mb-4">Package Summary</h4>
            <table class="table table-bordered">
              <% tour.packageSummary.forEach(function(pkg, i) { %> <%
              pkg.day.forEach(function(d, index) { %>
              <tr>
                <th>Day <%= d %></th>
                <td><%= pkg.daySummary[index] %></td>
              </tr>
              <% })%> <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Amenities and Food -->
    <div class="container mb-5">
      <div class="row">
        <div class="col-md-6 mb-4">
          <div class="card p-4 h-100 shadow-sm">
            <h3 class="text-primary font-weight-bold mb-3">Amenities</h3>
            <% if (tour.accommodation) { %>
            <ul class="list-unstyled">
              <% tour.accommodation.split(",").forEach(function(acc) { %>
              <li>
                <i class="fas fa-check text-success mr-2"></i><%= acc.trim() %>
              </li>
              <% }) %>
            </ul>
            <% } else { %>
            <p class="text-muted">No amenity details available.</p>
            <% } %>
          </div>
        </div>
        <div class="col-md-6 mb-4">
          <div class="card p-4 h-100 shadow-sm">
            <h4 class="text-success text-center mb-4">Food Details</h4>
            <table class="table table-bordered">
              <% if(tour.foods.length>0) {%>
              <tr>
                <th>Breakfast</th>
                <% tour.foods.forEach(function(food) {
                food.breakfastItems.forEach(function(item) { %>
                <td><%= item.name %></td>
                <% }) }) %>
              </tr>
              <tr>
                <th>Lunch</th>
                <% tour.foods.forEach(function(food) {
                food.lunchItems.forEach(function(item) { %>
                <td><%= item.name %></td>
                <% }) }) %>
              </tr>
              <tr>
                <th>Snack</th>
                <% tour.foods.forEach(function(food) {
                food.snackItems.forEach(function(item) { %>
                <td><%= item.name %></td>
                <% }) }) %>
              </tr>
              <tr>
                <th>Dinner</th>
                <% tour.foods.forEach(function(food) {
                food.dinnerItems.forEach(function(item) { %>
                <td><%= item.name %></td>
                <% }) }) %>
              </tr>
              <% } else { %>
              <p class="text-muted">No Food available.</p>
              <% } %>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Hotel Section -->
    <% if (tour.hotels.length > 0) { %>
    <div class="container mb-5">
      <div class="row">
        <div class="col-md-6 mb-4">
          <div
            class="carousel slide shadow rounded"
            id="hotel-carousel"
            data-ride="carousel"
          >
            <div class="carousel-inner">
              <% tour.hotels[0].image.forEach(function(img, index) { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img
                  src="/<%= img %>"
                  class="d-block w-100"
                  alt="Hotel Image"
                />
              </div>
              <% }) %>
            </div>
            <a
              class="carousel-control-prev"
              href="#hotel-carousel"
              role="button"
              data-slide="prev"
            >
              <span class="carousel-control-prev-icon"></span>
            </a>
            <a
              class="carousel-control-next"
              href="#hotel-carousel"
              role="button"
              data-slide="next"
            >
              <span class="carousel-control-next-icon"></span>
            </a>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card p-4 h-100 shadow-sm">
            <h2 class="text-primary font-weight-bold mb-2">
              <%= tour.hotels[0].name %>
            </h2>
            <p class="text-muted">
              <i class="fas fa-map-marker-alt text-danger"></i> <%=
              tour.hotels[0].location %>
            </p>
            <p>
              <strong>Occupancy:</strong> <%= tour.hotels[0].occupancy.minPerson
              %> - <%= tour.hotels[0].occupancy.maxPerson %> persons (Extra: <%=
              tour.hotels[0].occupancy.extraAdult %> adults / <%=
              tour.hotels[0].occupancy.extraChild %> children)
            </p>
            <p>
              <strong>Room Details:</strong> <%= tour.hotels[0].bedRoom %> Bed
              Room, <%= tour.hotels[0].hallRoom %> Hall, <%=
              tour.hotels[0].kitchen %> Kitchen, <%= tour.hotels[0].bathRoom %>
              Bathroom
            </p>
            <p>
              <strong>Facilities:</strong> <%= tour.hotels[0].accommodation %>
            </p>
            <h4 class="text-success">
              Price: ₹<%= tour.hotels[0].price %> / person
            </h4>
            <% if (tour.hotels[0].childPrice) { %>
            <h5 class="text-success">
              Child Price: ₹<%= tour.hotels[0].childPrice %> / child
            </h5>
            <% } %>
            <a href="#" class="btn btn-success mt-3">Book Now</a>
          </div>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="container pt-5">
      <h4 class="text-muted">No hotels available</h4>
    </div>
    <% } %>

