<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Update Profile</title>
    <!-- Bootstrap 5 CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="mb-4">Update Your Profile</h2>

      <form
        action="/admin/adminEdit/<%= user._id%>"
        method="POST"
        class="row g-3"
      >
        <!-- Name and Email -->
        <div class="col-md-6">
          <label for="name" class="form-label">Full Name *</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= user.name %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="email" class="form-label">Email Address *</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= user.email %>"
            required
          />
        </div>

        <!-- Address Fields -->
        <div class="col-md-6">
          <label for="country" class="form-label">Country / Region *</label>
          <input
            type="text"
            class="form-control"
            id="country"
            name="country"
            value="<%= user.country %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="street" class="form-label">Street Address *</label>
          <input
            type="text"
            class="form-control"
            id="street"
            name="street"
            value="<%= user.street %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="houseNumber" class="form-label"
            >House Number and Street Name *</label
          >
          <input
            type="text"
            class="form-control"
            id="houseNumber"
            name="houseNumber"
            value="<%= user.houseNumber %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="apartment" class="form-label"
            >Apartment, Suite, Unit (optional)</label
          >
          <input
            type="text"
            class="form-control"
            id="apartment"
            name="apartment"
            value="<%= user.apartment || '' %>"
          />
        </div>

        <div class="col-md-6">
          <label for="city" class="form-label">Town / City *</label>
          <input
            type="text"
            class="form-control"
            id="city"
            name="city"
            value="<%= user.city %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="state" class="form-label">State / County *</label>
          <input
            type="text"
            class="form-control"
            id="state"
            name="state"
            value="<%= user.state %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="postcode" class="form-label">Postcode / ZIP *</label>
          <input
            type="text"
            class="form-control"
            id="postcode"
            name="postcode"
            value="<%= user.postcode %>"
            required
          />
        </div>

        <!-- Contact -->
        <div class="col-md-6">
          <label for="phone" class="form-label">Phone Number *</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value="<%= user.phone %>"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="whatsapp" class="form-label"
            >WhatsApp Number (optional)</label
          >
          <input
            type="text"
            class="form-control"
            id="whatsapp"
            name="whatsapp"
            value="<%= user.whatsapp || '' %>"
          />
        </div>

        <!-- Hidden Redirect -->
        <input type="hidden" name="redirectTo" value="<%= redirectTo %>" />

        <!-- Submit -->
        <div class="col-12">
          <button type="submit" class="btn btn-primary w-100">
            Update Profile
          </button>
        </div>
      </form>
    </div>

    <!-- Bootstrap JS (Optional, for components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
