          <% if (isAuthenticated) { %>
          <!-- Profile Dropdown -->
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle d-flex align-items-center"
              href="#"
              id="userDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <img
                src="/images/icon/dp.png"
                alt="Profile"
                class="rounded-circle"
                width="30"
                height="30"
              />
              <span class="ml-2"><%= user.name %></span>
            </a>
