  <body class="animsition">
    <div class="page-wrapper">
      <!-- HEADER MOBILE-->
      <%-include("./layouts/adminHeaderMobile")%>

      <!-- END HEADER MOBILE-->

      <!-- MENU SIDEBAR-->
      <%-include("./layouts/adminSidebar")%>
      <!-- END MENU SIDEBAR-->

      <!-- PAGE CONTAINER-->
      <div class="page-container">
        <!-- HEADER DESKTOP-->
        <%-include("./layouts/adminHeader")%>
        <!-- HEADER DESKTOP-->

        <!-- MAIN CONTENT-->
        <div class="main-content">
          <div class="section__content section__content--p30">
            <div class="container-fluid">
              <div class="row">
                <div class="col-lg-12">
                  <div class="card">
                    <div class="card-header">Tour Package</div>
                    <div class="card-body">
                      <div class="card-title">
                        <h3 class="text-center title-2">Tour Place</h3>
                      </div>
                      <hr />
                      <%- include("./layouts/flash") %>
                      <form
                        action="/admin/tourAdd"
                        method="post"
                        novalidate="novalidate"
                        enctype="multipart/form-data"
                      >
                        <div class="form-group">
                          <label for="place" class="control-label mb-1"
                            >Place Name</label
                          >
                          <input
                            id="place"
                            name="place"
                            type="text"
                            class="form-control"
                            aria-required="true"
                            aria-invalid="false"
                          />
                        </div>
                        <div class="form-group">
                          <label for="fullAddress" class="form-control-label"
                            >Full Address</label
                          >
                          <input
                            type="text"
                            id="fullAddress"
                            placeholder="Enter Full Address"
                            class="form-control"
                            name="fullAddress"
                          />
                        </div>
                        <div class="row form-group">
                          <div class="col-8">
                            <div class="form-group">
                              <label for="city" class="form-control-label"
                                >City</label
                              >
                              <input
                                type="text"
                                id="city"
                                placeholder="Enter your city"
                                class="form-control"
                                name="city"
                              />
                            </div>
                          </div>
                          <div class="col-8">
                            <div class="form-group">
                              <label for="district" class="form-control-label"
                                >District</label
                              >
                              <input
                                type="text"
                                id="district"
                                placeholder="Enter your district"
                                class="form-control"
                                name="district"
                              />
                            </div>
                          </div>
                          <div class="col-8">
                            <div class="form-group">
                              <label for="state" class="form-control-label"
                                >State</label
                              >
                              <input
                                type="text"
                                id="state"
                                placeholder="Enter your state"
                                class="form-control"
                                name="state"
                              />
                            </div>
                          </div>
                          <div class="col-8">
                            <div class="form-group">
                              <label for="country" class="form-control-label"
                                >Country</label
                              >
                              <input
                                type="text"
                                id="country"
                                placeholder="Country"
                                class="form-control"
                                name="country"
                              />
                            </div>
                          </div>

                          <div class="col-8">
                            <div class="form-group">
                              <label for="pin" class="form-control-label"
                                >Pin Code</label
                              >
                              <input
                                type="number"
                                id="pin"
                                placeholder="Pin Code"
                                class="form-control"
                                name="pin"
                              />
                            </div>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="textarea-input" class="form-control-label"
                            >Description</label
                          >
                          <div class="col-12">
                            <textarea
                              id="textarea-input"
                              rows="9"
                              placeholder="Content..."
                              class="form-control"
                              name="description"
                            ></textarea>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="price" class="control-label mb-1"
                            >Total Price</label
                          >
                          <input
                            id="price"
                            name="price"
                            type="number"
                            class="form-control"
                            aria-required="true"
                            aria-invalid="false"
                          />
                        </div>
                        <div class="form-group">
                          <label class="form-control-label mb-2"
                            >Amenities</label
                          >
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              name="amenities"
                              value="Wi-Fi"
                              id="amenity1"
                            />
                            <label class="form-check-label" for="amenity1"
                              >Wi-Fi</label
                            >
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              name="amenities"
                              value="AC Rooms"
                              id="amenity2"
                            />
                            <label class="form-check-label" for="amenity2"
                              >AC Rooms</label
                            >
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              name="amenities"
                              value="Tour Guide"
                              id="amenity3"
                            />
                            <label class="form-check-label" for="amenity3"
                              >Tour Guide</label
                            >
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              name="amenities"
                              value="Meals Included"
                              id="amenity4"
                            />
                            <label class="form-check-label" for="amenity4"
                              >Meals Included</label
                            >
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="checkbox"
                              name="amenities"
                              value="Pickup & Drop"
                              id="amenity5"
                            />
                            <label class="form-check-label" for="amenity5"
                              >Pickup & Drop</label
                            >
                          </div>
                        </div>

                        <hr />
                        <h4>Tour Schedules (Group-wise by Duration)</h4>

                        <div id="scheduleContainer">
                          <!-- Empty initially, schedules will be added dynamically -->
                        </div>

                        <button
                          type="button"
                          class="btn btn-secondary my-2"
                          onclick="addSchedule()"
                        >
                          Add Schedule
                        </button>
                        <div class="form-group">
                          <label for="image" class="form-control-label"
                            >Upload Image</label
                          >
                          <input
                            type="file"
                            id="image"
                            name="image"
                            accept="image/*"
                            class="form-control-file"
                            multiple
                          />
                        </div>
                        <div>
                          <button
                            id="payment-button"
                            type="submit"
                            class="btn btn-lg btn-info btn-block"
                          >
                            <!-- <i class="fa fa-lock fa-lg"></i>&nbsp; -->
                            <span id="payment-button-amount">Submit</span>
                            <span
                              id="payment-button-sending"
                              style="display: none"
                              >Sending…</span
                            >
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="vendor/slick/slick.min.js"></script>
    <script src="vendor/wow/wow.min.js"></script>
    <script src="vendor/animsition/animsition.min.js"></script>
    <script src="vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="vendor/circle-progress/circle-progress.min.js"></script>
    <script src="vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="vendor/select2/select2.min.js"></script>

    <!-- Main JS-->
    <script src="js/main1.js"></script>
    <script>
      function addItem() {
        const itemHTML = `
        <div class="row form-group item-group">
                          <div class="col-md-2"><label for="day" class="control-label mb-1"
                            >Day</label
                          >
                          <input
                            id="day"
                            name="day[]"
                            type="number"
                            class="form-control"
                            aria-required="true"
                            aria-invalid="false"
                          /></div>
                          <div class="col-md-8"><label for="daySummary" class="control-label mb-1"
                            >Day Summary</label
                          >
                          <input
                            id="daySummary"
                            name="daySummary[]"
                            type="text"
                            class="form-control"
                            aria-required="true"
                            aria-invalid="false"
                          />
                        </div>
                          <div class="col-md-2">
                            <button
                                type="button"
                                class="btn btn-danger mt-4"
                                onclick="removeItem(this)"
                            >
                              Remove
                            </button>
                          </div>
                        </div>
      `;
        document
          .getElementById("formItems")
          .insertAdjacentHTML("beforeend", itemHTML);
      }

      function removeItem(button) {
        const itemGroup = button.closest(".item-group");
        itemGroup.remove();
      }
    </script>
    <script>
      function addSchedule() {
        const container = document.getElementById("scheduleContainer");

        const index = document.querySelectorAll(".schedule-item").length;

        const scheduleItem = document.createElement("div");
        scheduleItem.className = "schedule-item row form-group border p-2 my-2";

        scheduleItem.innerHTML = `
      <div class="col-md-2">
        <label>Duration (days)</label>
        <select name="scheduleDuration[]" class="form-control" onchange="generateDaySummaryFields(this, ${index})" required>
          <option value="">Select</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
      </div>
      <div class="col-md-3">
        <label>Group Name</label>
        <input type="text" name="scheduleGroup[]" class="form-control" required />
      </div>
      <div class="col-md-2">
        <label>Start Date</label>
        <input type="date" name="scheduleStart[]" class="form-control" required />
      </div>
      <div class="col-md-2">
        <label>End Date</label>
        <input type="date" name="scheduleEnd[]" class="form-control" required />
      </div>
      <div class="col-md-2">
        <label>Available Slots</label>
        <input type="number" name="scheduleSlots[]" class="form-control" required />
      </div>
      <div class="col-md-1">
        <button type="button" class="btn btn-danger mt-4" onclick="removeSchedule(this)">×</button>
      </div>
      <div class="col-md-12 mt-3" id="summaryContainer${index}">
        <!-- Dynamic day + summary inputs will appear here -->
      </div>
    `;

        container.appendChild(scheduleItem);
      }

      function generateDaySummaryFields(selectElement, index) {
        const dayCount = parseInt(selectElement.value);
        const summaryContainer = document.getElementById(
          `summaryContainer${index}`
        );
        summaryContainer.innerHTML = "";

        for (let i = 1; i <= dayCount; i++) {
          summaryContainer.innerHTML += `
        <div class="row mb-2">
          <div class="col-md-2">
            <label>Day ${i}</label>
            <input type="text" name="day[]" class="form-control" value="Day ${i}" required />
          </div>
          <div class="col-md-10">
            <label>Day ${i} Summary</label>
            <textarea name="daySummary[]" class="form-control" required></textarea>
          </div>
        </div>
      `;
        }
      }

      function removeSchedule(button) {
        const scheduleItem = button.closest(".schedule-item");
        if (scheduleItem) {
          scheduleItem.remove();
        }
      }
    </script>
  </body>
</html>
