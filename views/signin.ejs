<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TourTide Login / Sign up Form</title>

    <meta name="author" content="Untree.co" />
    <link rel="shortcut icon" href="favicon.png" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />
    <style>
      .close {
        padding: 0.75rem 1.25rem;
        background: transparent;
        border: none;
        /* -webkit-appearance: none; */
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        color: #000;
        text-shadow: 0 1px 0 #fff;
        opacity: 0.5;
        position: absolute;
        top: 0;
        right: 0;
      }
      .close:hover {
        opacity: 0.75;
      }
    </style>

    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <%- include("./layouts/flash") %>
    <div class="site-wrap d-md-flex align-items-stretch">
      <div
        class="bg-img"
        style="
          background-image: url('img/premium_photo-1697730497487-7bda47e4baff.jpg');
        "
      ></div>
      <div class="form-wrap">
        <div class="form-inner">
          <h1 class="title">Login</h1>
          <p class="caption mb-4">
            Please enter your login details to sign in.
          </p>

          <form action="/login" method="post" class="pt-3">
            <div class="form-floating">
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="info@example.com"
                name="email"
              />
              <label for="email">Email Address</label>
            </div>

            <div class="form-floating">
              <span class="password-show-toggle js-password-show-toggle"
                ><span class="uil"></span
              ></span>
              <input
                type="password"
                class="form-control"
                id="password"
                placeholder="Password"
                name="password"
              />
              <label for="password">Password</label>
            </div>

            <div class="mb-4">
              <div>
                <a href="forgot-password">Forgot password?</a>
              </div>
            </div>

            <div class="d-grid mb-4">
              <button type="submit" class="btn btn-primary">Log in</button>
            </div>

            <div class="mb-2">
              Donâ€™t have an account? <a href="/signup">Sign up</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script>
      // Custom dismiss logic for Bootstrap 4-style `.close` buttons (in Bootstrap 5)
      document.addEventListener("click", function (e) {
        if (e.target.closest(".close")) {
          const alert = e.target.closest(".alert");
          if (alert) {
            alert.classList.remove("show");
            alert.classList.add("fade");
            setTimeout(() => {
              alert.remove();
            }, 150); // Match Bootstrap's fade-out timing
          }
        }
      });
    </script>

    <script src="js/custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
  </body>
</html>
